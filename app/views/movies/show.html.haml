.panel.panel-default
  .panel-body
    .row
      .col-md-4
        = image_tag @movie.image_movie.url(:medium)
        .table-responsive
          %table.table
            %tbody
              %tr
                %td
                  %strong Title:
                  = @movie.title
              %tr
                %td
                  %strong Description:
                  = @movie.description
              %tr
                %td
                  %strong Movie length:
                  = @movie.movie_length
              %tr
                %td
                  %strong Director:
                  = @movie.director
              %tr
                %td
                  %strong Rating:
                  = @movie.rating
= link_to 'Edit', edit_movie_path(@movie)
= link_to 'Back', movies_path
